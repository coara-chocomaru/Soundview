<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 必要なパーミッション -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.AppCompat.DayNight"
        android:label="MP3view"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true">

        <!-- メインアクティビティ -->
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AudioService の宣言 -->
        <service
            android:name=".AudioService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <!-- 
                `android:permission="android.permission.BIND_JOB_SERVICE"` は通常ジョブサービスに使われます。
                ここでは必要ないので削除します。 
            -->
            <intent-filter>
                <action android:name="com.coara.mp3view.AudioService" />
            </intent-filter>
        </service>
        
        <!-- AudioServiceからの制御用ブロードキャストレシーバー -->
        <receiver
            android:name=".AudioService$AudioControlReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="AUDIO_CONTROL" />
            </intent-filter>
        </receiver>

        <!-- AudioServiceからの状態更新用ブロードキャストレシーバー -->
        <receiver
            android:name=".MainActivity$AudioStateReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="ACTION_AUDIO_STATE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
